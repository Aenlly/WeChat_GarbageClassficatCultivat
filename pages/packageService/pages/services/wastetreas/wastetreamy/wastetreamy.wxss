page {
  background-color: white;
}
/* 选项卡容器样式 */
.penal-tabs {
  background-color: #ededed;
  display: flex;
  flex-direction: column;
}
/* 选项卡样式 */
.mp-tabs {
  align-items: center;
  padding: 5rpx;
}
/* 选项卡头部样式 */
.tab-class {
  height: 50rpx;
  margin: 0 45rpx;
  border-bottom: rgba(250, 250, 250, 1) 2rpx solid;
}
/* 横向滚动容器 */
.swiper-class {
  height: 1240rpx;
}
/* 纵向滚动容器 */
.sroll-view {
  height: 1240rpx;
  display: flex;
}
/* 面板样式 */
.panel {
  display: flex;
  flex-direction: column;
  width: 710rpx;
}
/* 面板文字容器样式 */
.panel-col {
  display: flex;
  flex-direction: column;
}
/* 封面图片样式*/
.img-view, .imgurl{
  margin-top: 0;
}
.t text{
  color: #4a90e2;
}
.weui-media-box{
  padding: 0;
}
/* 标题文字样式 */
.text-title .title {
  width: 380rpx;
}
