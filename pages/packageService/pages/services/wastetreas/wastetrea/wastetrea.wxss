/* pages/services/wastetrea/wastetrea.wxss */
.flex-wrp-col {
  background-color: white;
}
/* 选项卡容器样式 */
.penal-tabs {
  background-color: white;
  display: flex;
  flex-direction: column;
}
/* 选项卡样式 */
.mp-tabs {
  align-items: center;
  padding: 5rpx;
}
/* 选项卡头部样式 */
.tab-class {
  height: 50rpx;
  margin: 0 85rpx;
  border-bottom: rgba(250, 250, 250, 1) 2rpx solid;
}
/* 横向滚动容器 */
.swiper-class {
  height: 1390rpx;
}
/* 纵向滚动容器 */
.sroll-view {
  height: 100%;
}
/* 面板样式 */
.panel {
  display: flex;
  flex-direction: row;
}
/* 标题文字样式 */
.text-title .title {
  width: 450rpx;
}
/* 底部浏览器布局样式 */
.footer {
  position: fixed;
  align-items: center;
  justify-self: center;
  text-align: center;
  bottom: 0;
  left: 0;
  right: 0;
  height: 168rpx;
}
/* 底部排列布局 */
.footer-flex {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-self: center;
  text-align: center;
}
/* 底部居中 */
.footer-flex view {
  margin: 0 auto;
}
/* 图片样式 */
.footer image {
  width: 168rpx;
  height: 168rpx;
}
