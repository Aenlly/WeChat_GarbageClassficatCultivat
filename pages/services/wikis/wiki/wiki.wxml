<!--pages/services/wiki/wiki.wxml-->
<mp-searchbar bindcancel="bindclearSear" search="{{search}}" bindselectresult="selectResult">
</mp-searchbar>

<view class="page" wx:if="{{!is_sear}}">
  <view class="page__bd">
    <view class="weui-panel__hd">热门资讯</view>
    <view class="weui-panel__bd">
      <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{wiki}}"
        wx:for-index="index" wx:if="{{index<6}}" url="/pages/test/test?wiki_id='{{item.wiki_id}}'">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <view class="index">
            {{index}}
          </view>
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">{{item.wiki_title}}</view>
          <view class="weui-media-box__desc">{{item.wiki_context}}</view>
        </view>
      </navigator>
    </view>

    <view class="weui-panel__ft">
      <view class="weui-cell weui-cell_access weui-cell_link">
        <view class="weui-cell__bd">查看更多</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>
</view>