<!-- pages/services/wiki/wiki.wxml -->
<!-- 搜索栏 -->
<mp-searchbar bindcancel="bindclearSear" search="{{search}}" bindselectresult="selectResult"></mp-searchbar>
<!-- 面板 -->
<view class="page" wx:if="{{!is_sear}}">
  <view class="weui-panel">
    <view class="weui-panel__hd">热门资讯</view>
    <scroll-view scroll-y="{{true}}" style="height: 1280rpx;">
      <view class="weui-panel__bd">
        <!-- 数据 -->
        <navigator class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{wiki}}"
          wx:for-index="index" url="/pages/services/wikiinfo/wikiinfo?wiki_id='{{item.wiki_id}}'">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{item.imgurl}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{item.wiki_title}}</view>
            <view class="weui-media-box__desc">{{item.wiki_context}}</view>
          </view>
        </navigator>
      </view>
    </scroll-view>
  </view>
</view>