/* pages/mines/integrank/integrank.wxss */
/* 用户排名容器 */
.user-view {
  height: 160rpx;
  margin: 32rpx 32rpx 0 32rpx;
  background-repeat: no-repeat;
  background-size: 100% 160rpx;
  display: flex;
  flex-direction: row;
  padding: 32rpx 32rpx 0rpx 32rpx;
}
/* 用户排名 */
.nickrank {
  font-size: 48rpx;
  line-height: 80rpx;
  font-family: cursive;
  font-style: oblique;
}
/* 排名样式 */
.user-view .nickrank {
  padding-right: 32rpx;
}
/* 用户头像 */
.nickurl {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
/* 昵称样式 */
.nickname {
  width: 100%;
  padding-left: 32rpx;
  line-height: 80rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 用户积分 */
.nickinteg {
  width: 280rpx;
  font-size: 28rpx;
  color: #4e2424;
  line-height: 80rpx;
}
/* 积分样式 */
.user-view .nickinteg {
  text-align: right;
  width: 100%;
}

/* 排名容器样式 */
/* 底部等级容器样式 */
.rank-view {
  margin: 0 32rpx;
  background-color: white;
  border-radius: 20rpx;
}
/* 滚动容器样式 */
.scroll-view {
  height: 1200rpx;
}
/* 内容样式 */
.content-cell {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  border-top: rgba(255, 255, 255, 0.1) 1rpx solid;
  box-shadow: 0 8px 24rpx 1rpx rgba(255, 255, 255, 0.6);
  /* 重叠阴影 */
  -webkit-box-shadow: 0px 8rpx 24rpx #f2f2f2;
}
/* 底部容器左边容器对齐样式 */
.content-cell .left-view {
  text-align: left;
  padding: 10rpx 32rpx 10rpx 32rpx;
}
/* 排名序号样式 */
.rank-view .rank-text {
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  font-family: cursive;
  font-style: oblique;
}
/* 排名用户图片样式 */
.user-rank image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0 20rpx 20rpx;
  border-radius: 50%;
}
/* 用户昵称样式 */
.title_left {
  width: 100%;
  line-height: 120rpx;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 底部容器右边容器对齐样式 */
.content-cell .right-view {
  text-align: right;
  line-height: 100rpx;
  font-size: 30rpx;
  padding: 10rpx 32rpx 10rpx 32rpx;
}
