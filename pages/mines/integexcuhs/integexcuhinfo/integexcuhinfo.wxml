<!-- pages/mines/integexcuhs/integexcuhinfo/integexcuhinfo.wxml -->
<view class="container">
  <view class="flex-wrp-col">
    <view class="banner-view">
      <image src="{{API_RES_URL}}{{info.imgUrl}}"></image>
    </view>
    <view class="title-view">
      <text>{{info.giftName}}</text>
    </view>
    <view class="blank-view"></view>
    <view class="info-view">
      <view class="point">
        <text class="info_point">积分{{info.point}}</text>
        <text class="present_price">￥{{info.price}}</text>
      </view>
      <view class="number-view">
        <view class="number">库存：{{info.number}}</view>
        <view class="sold">已售：{{info.sold}}</view>
        <view class="browse">浏览量：{{info.browseCount}}</view>
      </view>
      <view class="receive-view">
        <text>添加微信进行兑换：{{tel}}</text>
      </view>
    </view>
    <view class="blank-view"></view>
    <view class="desc-view">
      <view class="desc_title">礼品描述</view>
      <view class="desc-desc">
        <text>
        {{info.giftDesc}}
        </text>
      </view>
    </view>
    <view class="btn-view">
    <button type="primary" bindtap="exchangeClick">立刻兑换</button>
    </view>
  </view>
</view>