/* pages/service/service.wxss */
page{
  background-color: white;
}
/* 一行容器的样式 */
.flex-wrp-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 70rpx 0 0 0;
  padding: 0 40rpx 0 40rpx;
}
/* 单个服务的容器样式 */
.service-col{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33%;
}
/* 图标容器样式 */
.service-col-img{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}
/* 图标样式 */
.service-game-img{
  width: 120rpx;
  height: 120rpx;
}
/* 文字样式 */
.service-col-text{
  font-size: 28rpx;
  color: #7f7f7f;
}